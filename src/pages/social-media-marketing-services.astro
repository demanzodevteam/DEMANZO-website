---
// import Welcome from '../components/Welcome.astro';
import HomeLayout from '../layouts/HomeLayout.astro';
import SocialMedia from '../components/pagesComponents/SocialMediaMarketing/SocialMedia.astro';

import { SEO_URL } from '../config/urls';
import he from 'he';

// Fetch from WordPress REST API
const res = await fetch(SEO_URL +"157");
const pageData = await res.json();

// Extract Rank Math SEO fields
const seo = pageData.rank_math_meta || {};
const title = seo.title ? he.decode(seo.title) : "Fallback Title";
const description = seo.description ? he.decode(seo.description) : "Fallback description";
const permalink = seo.permalink || "";


// const title = "Social Media Marketing Services for Startups, Small Business | Demanzo";
// const description = "Demanzo helps startup, small businesses to tap the potential of the social media and work towards having a two way communication between you and your prospects.";
---

<HomeLayout title={title} description={description}>
	<SocialMedia />
</HomeLayout>
