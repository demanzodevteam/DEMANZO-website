---
import HomeLayout from '../layouts/HomeLayout.astro';
import SearchEngineComponent from '../components/pagesComponents/searchEngineOptimization/SearchEngineComponent.astro';
import { SEO_URL } from '../config/urls';
import he from 'he';

// Fetch from WordPress REST API
const res = await fetch(SEO_URL +"155");
const pageData = await res.json();

// Extract Rank Math SEO fields
const seo = pageData.rank_math_meta || {};
const title = seo.title ? he.decode(seo.title) : "Fallback Title";
const description = seo.description ? he.decode(seo.description) : "Fallback description";
const permalink = seo.permalink || "";

// const title = "Search Engine Optimization (SEO) Service | SEO Agency | Demanzo";
// const description = "Demanzo helps businesses to improve the organic traffic by improving the keyword positions. Our proven SEO marketing methodology can help you to compete against your competitors.";
---

<HomeLayout title={title} description={description}>
	<SearchEngineComponent />
</HomeLayout>
