---
import Footer from "../components/main/Footer.astro";
import logo from "../assets/logo.png";
import NavLinks from "../components/navitems/NavLinks.astro";
import Header from '../components/main/Header.astro';
import '../styles/global.css'
---

<Header />
<div
	class="bg-white flex items-center justify-between lg:px-6 py-3 sticky top-0 z-50 shadow"
>
	<div>
		<img
			src={logo.src}
			alt="logo"
			class="w-[170px] md:w-[190px] lg:w-[200px]"
		/>
	</div>

	<div class="hidden lg:block">
		<NavLinks />
	</div>
</div>

<slot />

<Footer/>