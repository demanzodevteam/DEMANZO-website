---
import { API_URL } from "../../../../config/urls";

const res = await fetch(API_URL + "blocks/204");
const data = await res.json();

const pageData = data[7];
const list = pageData?.list_items[0];
---

<div class="pt-[70px] pb-[100px] px-[15px] bg-[#fafbff]">
    <h2 class="md:px-[110px] lg:px-[193px] pb-[25px] text-[35px] md:text-[40px] font-[600] text-[#191d27] text-center leading-12">{pageData.headings[0]}</h2>
    <p class="mb-[20px] md:mb-[40px] md:px-[125px] lg:px-[220px] text-[16px] font-[500] text-[#616670] text-center">{pageData.paragraphs[0]}</p>
    <h2 class="md:px-[110px] lg:px-[194px] text-[20px] font-[600] text-[#191d27] text-center">{pageData.paragraphs[1]}</h2>
    <div class="mt-[48px] grid grid-cols-1 lg:grid-cols-3 md:gap-4 lg:gap-6 lg:mx-[48px]">
        {
            list.map((item: any) => (
                <div class="p-[30px] mx-[10px] md:mx-0  mt-[16px] rounded bg-white group shadow">
                    <div class="flex items-center justify-center mb-[20px] group-hover:-translate-y-3 transition duration-500" set:html={item?.svg}></div>
                    <h5 class="text-left text-[20px] font-[600] text-[#191d27] pb-[20px] mb-[20px]">{item?.heading}</h5>
                    <p class="text-left text-[16px] font-[500] text-[#616670] mb-[20px]">{item?.para}</p>
                </div>
            ))
        }
    </div>
</div>