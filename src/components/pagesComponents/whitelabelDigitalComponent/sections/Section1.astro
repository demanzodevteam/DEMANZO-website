---
import { API_URL } from "../../../../config/urls";
import { MEDIA_URL } from "../../../../config/urls";


const res = await fetch(API_URL + "blocks/204");
const data = await res.json();

const pageData = data[0]; 
---

<!-- Section-1 -->
<div class="bg-[#e6f8ff] px-[15px] py-[90px] relative text-center">
    <div class="demanzo-container-auto">
    <p class="demanzo-title pb-[16px]">{pageData.title}</p>
    <div class="relative mx-auto lg:mx-[100px] mb-[20px] pb-[16px] text-center flex items-center justify-center">
        <h1 class="demanzo-h1 text-[#191d27] leading-14">
            {pageData.headings[0]}
        </h1>
        <svg
            class="mt-2 mx-auto w-[240px] h-[20px] absolute bottom-3"
            viewBox="0 0 270 20"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
            d="M5 15C80 5 190 0 265 12"
            stroke="#FF5F55"
            stroke-width="6"
            stroke-linecap="round"
            />
        </svg>
    </div>
    <div class="mx-[20px] md:mx-[40px] lg:mx-[130px]">
        <p class="demanzo-bold-p mb-[20px]">{pageData.paragraphs[0]}</p>
        <p class="demanzo-p mb-[20px]">{pageData.paragraphs[1]}</p>
        <p class="demanzo-p mb-[20px]">{pageData.paragraphs[2]}</p>
    </div>
    <img
        src={MEDIA_URL+pageData.images?.[0]?.src}
        alt={pageData.images?.[0]?.alt}
        class="absolute bottom-96 left-30 hidden lg:block"
      />
</div>
</div>
