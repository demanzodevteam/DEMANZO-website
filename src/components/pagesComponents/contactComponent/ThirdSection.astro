---
import Img from '../../../assets/illustration-guava-mascot-as-graphic-designer-cute-style-design-t-shirt-sticker-logo-element_152558-3513-removebg-preview.png'
import CaptchaImg from '../../../assets/Captcha.png'
import BackGroundImg from '../../../assets/Background-SEO-Traffic.jpg'
---

<div class=" flex items-center justify-center px-4 py-10 "style={`background-image: url(${BackGroundImg.src})`};>
  <div class=" overflow-hidden grid grid-cols-1 lg:grid-cols-2 lg:mb-10 max-w-6xl w-full">
    
    <!-- Left Side -->
    <div class="p- flex flex-col items-center justify-center text-center gap-6">
      <h2 class="text-2xl lg:text-[40px] font-bold text-white">Get Started</h2>
      <img
        src={Img.src}
        alt="Contact Illustration"
        class="lg:w-100 lg:h-100 object-cover "
      />
    </div>

    <!-- Right Side - Form -->
    <div class="p-8 lg:mt-30">
      <form class="flex flex-col gap-6">
        <div>
          <input
            type="text"
            id="name" placeholder="Your Name"
            class="w-full border border-gray-300 p-2 bg-white"
            required
          />
        </div>

        <div>
          <input
            type="email"
            id="email" placeholder="Email"
            class="w-full border border-gray-300 p-2 bg-white"
            required
          />
        </div>

        <div>
          <textarea
            id="message"
            rows="4" placeholder="Message"
            class="w-full border border-gray-300 p-2 bg-white"
            required
          ></textarea>
        </div>

        <div class="mt-2">
          <img src={CaptchaImg.src} alt="Captcha" class="w-20 mb-2" />
        </div>
        <div>
          <input
            type="text"
            id="" 
            class="w-full border border-gray-300 p-2 bg-white"
            required
          />
        </div>

        <div class="text-right lg:text-right ">
          <button
            type="submit"
            class="w-full lg:w-auto bg-white text-blue-600 px-6 py-2 rounded-3xl hover:bg-[#F5A31C] hover:text-white hover:cursor-pointer transition"
          >
            Submit
          </button>
        </div>
        
      </form>
    </div>
  </div>
</div>
